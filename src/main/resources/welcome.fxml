<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="600.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112"
          fx:controller="com.dreamygeeks.mms.welcome.WelcomeController">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0"/>
        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="200.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="ALWAYS"/>
        <RowConstraints minHeight="10.0" prefHeight="100.0" vgrow="ALWAYS"/>
    </rowConstraints>
    <children>
        <PieChart fx:id="companyWiseSales" labelsVisible="false" maxHeight="-Infinity" maxWidth="-Infinity"
                  title="Company Wise Sales" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <PieChart fx:id="companyWisePurchase" title="Company Wise Purchase" GridPane.rowIndex="1"/>
        <StackedAreaChart fx:id="purchaseSaleCompare" alternativeRowFillVisible="false"
                          horizontalGridLinesVisible="false" horizontalZeroLineVisible="false"
                          title="Sales Purcharse Compare" titleSide="BOTTOM" verticalZeroLineVisible="false">
            <xAxis>
                <NumberAxis/>
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT"/>
            </yAxis>
        </StackedAreaChart>
        <BarChart fx:id="weeklyInMaterial" title="Material In Last Week" titleSide="BOTTOM" GridPane.columnIndex="1">
            <xAxis>
                <CategoryAxis side="BOTTOM"/>
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT"/>
            </yAxis>
        </BarChart>

    </children>
</GridPane>
